<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_time_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="انتخاب بازه زمانی"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:textDirection="rtl" />

        <Button
            android:id="@+id/btn_time_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/close_button_background"
            android:text="×"
            android:textSize="20sp"
            android:textColor="#666666"
            android:gravity="center"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Selected Date Range Display -->
    <LinearLayout
        android:id="@+id/card_selected_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/day_background_in_range"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_selected_date_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تاریخ انتخاب شده"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:textDirection="rtl" />
    </LinearLayout>

    <!-- Time Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Start Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="از ساعت:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textDirection="rtl"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btn_start_time"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="انتخاب ساعت"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="@drawable/day_background_normal"
                android:textDirection="rtl" />
        </LinearLayout>

        <!-- End Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تا ساعت:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textDirection="rtl"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btn_end_time"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="انتخاب ساعت"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="@drawable/day_background_normal"
                android:textDirection="rtl" />
        </LinearLayout>
    </LinearLayout>

    <!-- Selected Time Range Display -->
    <LinearLayout
        android:id="@+id/card_selected_time_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/day_background_selected"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_selected_time_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بازه زمانی انتخاب شده"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textDirection="rtl" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_time_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="انصراف"
            android:textSize="16sp"
            android:textColor="#666666"
            android:background="@drawable/day_background_normal"
            android:textDirection="rtl"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_time_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="تایید"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/day_background_selected"
            android:textDirection="rtl"
            android:layout_marginStart="8dp"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout> 